@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Doctor

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Add Patient:")
  @Html.DropDownList("PatientId")

  @Html.Label("Add Specialty:")
  @Html.DropDownList("SpecialtyId")

  <input type="submit" value="Update" />
}

<p>@Html.ActionLink("Doctor's Index", "Index")</p>