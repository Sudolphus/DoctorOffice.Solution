@{
  Layout = "_Layout";
}

@using DoctorOffice.Models
@model IEnumerable<DoctorOffice.Models.Specialty>

<h1>Specialties:</h1>

@if(@Model.Count() == 0)
{
  <p>There are no specialties in the database</p>
}
else
{
  <ul>
  @foreach(Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.Type}", "Details", new { id = specialty.SpecialtyId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>