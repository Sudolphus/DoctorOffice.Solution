@{
  Layout = "_Layout";
}

@using DoctorOffice.Models
@model IEnumerable<DoctorOffice.Models.Patient>

<h1>Patients</h1>

@if(@Model.Count == 0)
{
  <p>There are no patients in the database</p>
}
else
{
  <form asp-controller="Patients" asp-action="Index">
    <label for="patientName">Filter By Name</label>
    <input type="text" name="patientName" id="patientName" />
    <input type="submit" value="Filter" />
  </form>
  <ul>
  @foreach(Patient patient in Model)
  {
    <li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>