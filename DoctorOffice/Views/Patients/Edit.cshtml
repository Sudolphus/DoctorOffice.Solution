@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Patient

<h2>Edit For @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Birthday)
  @Html.TextBoxFor(model => model.Birthday, new {@type="date"})

  @Html.Label("Add A Doctor")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Update" />
}

<p>@Html.ActionLink("Patient's Index", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>